rofi.theme: glue_pro_blue
rofi.font: Cantarell 10
rofi.icon-theme: Adwaita
rofi.show-icons: true
rofi.eh: 2
rofi.combi-hide-mode-prefix: true

! Vim mode with Control key
rofi.kb-clear-line: Control+d
rofi.kb-move-front: Control+Shift+6,Control+0
rofi.kb-move-end: Control+Shift+4
rofi.kb-move-word-back: Control+b
rofi.kb-move-word-forward: Control+w
rofi.kb-move-char-back: Control+h,Left
rofi.kb-move-char-forward: Control+l,Right
rofi.kb-remove-char-forward:
rofi.kb-remove-char-back:
rofi.kb-remove-to-eol: Control+D
