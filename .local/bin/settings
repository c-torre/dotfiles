#!/bin/sh
# Common desktop settings

help() {
    echo "Usage: settings -option

Options:
-b: battery level
-n: network management
-s: sound mixer
-w: change wallpaper *notimplementederror*" && exit
    }

[ -z ${1+x} ] && help

case $1 in
    -b) cat /sys/class/power_supply/BAT?/capacity ;;
    -n) nmtui ;;
    -s) pulsemixer ;;
    *)  help ;;
esac
